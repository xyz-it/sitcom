<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
	android:layout_width="300dp"
    android:layout_height="150dp"
    android:background="@drawable/menu_user_background"
    android:baselineAligned="false"
    android:backgroundTint="#000"
    android:backgroundTintMode="add"
    android:padding="10dp">

    <!--<ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView"
        android:src="@drawable/ic_user"
        android:scaleType="fitXY" /> -->
    <ImageView
        android:layout_width="91dp"
        android:layout_height="25dp"
        android:id="@+id/imageView"
        android:background="@drawable/lapeyre_logo"
        android:layout_gravity="center_horizontal"
        android:cropToPadding="false" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Kimveasna PEN"
            android:id="@+id/username"
            android:gravity="left|center"
            android:drawableLeft="@drawable/ic_store"
            android:drawableStart="@drawable/ic_user"
            android:theme="@style/menu_text"
            android:textColor="@android:color/white" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_store"
            android:layout_gravity="left|center_vertical"
            android:textAlignment="textStart" />
    </LinearLayout>
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="2 590,90 €"
		android:textSize="30sp"
		android:id="@+id/total"
		android:gravity="right|center"
		android:textColor="@android:color/white"
		android:layout_marginRight="20dp"/>
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="(2 159,08 € HT)"
		android:textSize="20sp"
		android:id="@+id/total"
		android:gravity="right|center"
		android:textColor="@android:color/white"
		android:layout_marginRight="20dp"/>
</LinearLayout>
