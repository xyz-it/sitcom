<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
>

    <TextView
		android:layout_width="match_parent"
        android:layout_height="30dp"
		android:gravity="left|center_vertical"
		android:text="Identité"
		android:textColor="@android:color/white"
		android:paddingLeft="10dp"
		android:drawableLeft="@drawable/ic_person_white"
		android:background="@drawable/border">

	</TextView>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/civility"
        android:entries="@array/civility"
        android:ems="10"
        android:hint="Civilité"
        android:padding="7dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/forwardingAgent"
        android:hint="Nom"
        android:padding="7dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_gravity="center_horizontal"

        android:hint="Prénom"


        android:padding="7dp" />
	<TextView 
		android:layout_width="match_parent"
        android:layout_height="30dp"
		android:gravity="left|center_vertical"
		android:text="Adresse"
		android:textColor="@android:color/white"
		android:paddingLeft="10dp"
		android:layout_marginTop="10dp"
		android:drawableLeft="@drawable/ic_home"
		android:background="@drawable/border">

	</TextView>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<EditText
			android:layout_width="70dp"
			android:layout_height="wrap_content"
			android:ems="10"
			android:id="@+id/street_no"
			android:layout_gravity="center_horizontal"

			android:hint="N°"
            android:padding="7dp" />
		<EditText
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:ems="10"
			android:id="@+id/street"
			android:layout_gravity="center_horizontal"

			android:hint="Rue"
            android:padding="7dp" />
	</LinearLayout>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<EditText
			android:layout_width="70dp"
			android:layout_height="wrap_content"
			android:ems="10"
			android:id="@+id/floor"
			android:layout_gravity="center_horizontal"

			android:hint="Etage"
            android:padding="7dp" />
		<EditText
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:ems="10"
			android:id="@+id/building"
			android:layout_gravity="center_horizontal"

			android:hint="Batiment, Immeuble"
            android:padding="7dp" />
	</LinearLayout>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<EditText
			android:layout_width="90dp"
			android:layout_height="wrap_content"
			android:ems="10"
			android:id="@+id/zip_code"
			android:layout_gravity="center_horizontal"

			android:hint="CP"
            android:padding="7dp" />
		<EditText
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:ems="10"
			android:id="@+id/city"
			android:layout_gravity="center_horizontal"

			android:hint="Ville"
            android:padding="7dp" />
	</LinearLayout>
	<Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/country"
        android:entries="@array/countries"
        android:ems="10"

        android:hint="Pays"
        android:padding="7dp" />
	<TextView 
		android:layout_width="match_parent"
        android:layout_height="30dp"
		android:gravity="left|center_vertical"
		android:text="Contact"
		android:textColor="@android:color/white"
		android:paddingLeft="10dp"
		android:layout_marginTop="10dp"
		android:background="@drawable/border"
        android:drawableLeft="@drawable/ic_phone">

	</TextView>
	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:ems="10"
		android:id="@+id/phone"
		android:layout_gravity="center_horizontal"
		android:hint="Téléphone"
		android:inputType="phone"
        android:padding="7dp" />
	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:ems="10"
		android:id="@+id/mobile"
		android:layout_gravity="center_horizontal"
		android:hint="Mobile"
		android:inputType="phone"
        android:padding="7dp" />
	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:ems="10"
		android:id="@+id/email"
		android:layout_gravity="center_horizontal"
		android:hint="Email"
		android:inputType="textEmailAddress"
        android:padding="7dp" />
	
</LinearLayout>
